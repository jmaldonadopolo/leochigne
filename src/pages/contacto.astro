import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacto">
  <!-- Breadcrumbs & Page Title Start -->
  <div class="breadcrumbs-title white-bg pt-90 pb-80">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="breadcrumbs-menu">
            <h2>Contacto</h2>
            <ul class="clearfix">
              <li><a href="/">Home</a><span>|</span></li>
              <li>Contacto</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Breadcrumbs & Page Title End -->
  <!-- Contact Section Start -->
  <div class="contact-area style2 white-bg pt-30 pb-120">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 text-center mobi-mb-50">
          <div class="info-box overlay dark-3 boxbg-1 mb-30">
            <div class="d-table relative">
              <div class="d-table-cell">
                <h4 class="text-uppercase">Dirección de contacto</h4>
                <span class="v-shape white"></span>
                <p>Calle Clara Campoamor 27. <br /> Galapagar. Madrid 18420</p>
              </div>
            </div>
          </div>
          <!-- Info Box End -->
          <div class="info-box overlay dark-3 boxbg-2 mb-30">
            <div class="d-table relative">
              <div class="d-table-cell">
                <h4 class="text-uppercase">Teléfono</h4>
                <span class="v-shape white"></span>
                <p><a href="tel:+34747412444">+34747412444</a></p>
              </div>
            </div>
          </div>
          <!-- Info Box End -->
          <div class="info-box overlay dark-3 boxbg-3">
            <div class="d-table relative">
              <div class="d-table-cell">
                <h4 class="text-uppercase">Email</h4>
                <span class="v-shape white"></span>
                <p>
                  <a href="mailto:contacto@leochigne.com">contacto@leochigne.com</a>
                </p>
              </div>
            </div>
          </div>
          <!-- Info Box End -->
        </div>
        <div class="col-xs-12 col-sm-8">
          <div class="plr-35">
            <div class="section-title style2 mb-40">
              <h2 class="mb-15">¿Listo para empezar?</h2>
              <p>
                Como diseñador multidisciplinario estoy preparado para ayudarte a desarrollar tu proyecto.
              </p>
            </div>
            <div class="contact-form mb-70">
              <form
                class="custom-input contact_form"
                id="contact_form"
                action="contact-form.php"
                method="post"
              >
                <div class="row">
                  <div class="col-xs-12 col-sm-6">
                    <input
                      type="text"
                      id="contact_name"
                      name="name"
                      placeholder="Tu nombre"
                      required
                    />
                  </div>
                  <div class="col-xs-12 col-sm-6">
                    <input
                      type="email"
                      id="contact_email"
                      name="email"
                      placeholder="Tu email"
                      required
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-12 col-sm-6">
                    <input
                      type="text"
                      id="contact_phone"
                      name="phone"
                      placeholder="Tu teléfono"
                    />
                  </div>
                  <div class="col-xs-12 col-sm-6">
                    <input
                      type="text"
                      id="contact_website"
                      name="website"
                      placeholder="Tu website"
                    />
                  </div>
                </div>
                <textarea
                  name="message"
                  id="contact_message"
                  rows="2"
                  placeholder="Escribe tu mensaje"></textarea>
                <button
                  class="btn theme-btn mt-15"
                  type="submit"
                  name="submit"
                  id="contact_submit"
                  data-complete-text="¡Bien hecho!"
                >
                  Enviar mensaje
                </button>
              </form>
            </div>
            <!-- Contact Form End -->

            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3029.577441359975!2d-3.963407823590949!3d40.5950817447644!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd417644f447d0cf%3A0x110c20acfdf372cb!2sC.%20de%20Clara%20Campoamor%2C%2027%2C%2028420%20Parquelagos%2C%20Madrid%2C%20Espa%C3%B1a!5e0!3m2!1ses!2spe!4v1710605496547!5m2!1ses!2spe"
              width="100%"
              height="400"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
            <!-- Google Map End -->
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Contact Section End -->
</Layout>
